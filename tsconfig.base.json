{
  "compilerOptions": {
    /* JS target & module system */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    /* Output controls â€“ packages override these */
    "declaration": true,
    "declarationMap": true,

    /* Path mapping for workspace packages */
    "baseUrl": ".",
    "paths": {
      "parser/*": ["parser/src/*"]
    },

    "outDir": "dist"
  },

  /* Individual packages supply their own include/outDir/rootDir */
  "exclude": ["node_modules", "dist", "coverage"]
}
