{
  "name": "mixcut",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm run -r build && pnpm worker:bundle",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",

    "infra:deploy": "pnpm -F @mixcut/aws-infra cdk deploy",
    "infra:diff": "pnpm -F @mixcut/aws-infra cdk diff",
    "infra:synth": "pnpm -F @mixcut/aws-infra cdk synth",

    "shared:pack": "pnpm -F @mixcut/shared pack --pack-destination services/worker/vendor",

    "worker:bundle": "pnpm run shared:pack && docker build services/worker --platform linux/amd64",
    "validator:bundle": "pnpm -F validator build",

    "website:build": "pnpm -F website build",
    "website:dev": "pnpm -F website dev"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.18.2"
}
