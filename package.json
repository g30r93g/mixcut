{
  "name": "mixcut",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm run -r build && pnpm worker:bundle",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "format": "prettier --write \"**/*.{cjs,js,mjs,ts,tsx,jsx,json,md,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,mjs,ts,tsx,jsx,json,md,css,scss,html}\"",
    "infra:deploy": "pnpm -F @mixcut/aws-infra cdk deploy",
    "infra:diff": "pnpm -F @mixcut/aws-infra cdk diff",
    "infra:synth": "pnpm -F @mixcut/aws-infra cdk synth",
    "worker:bundle": "pnpm -F worker build && docker build --platform linux/amd64 services/worker",
    "validator:bundle": "pnpm -F validator build",
    "website:build": "pnpm -F website build",
    "website:dev": "pnpm -F website dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "**/*.{cjs,js,mjs,ts,tsx,jsx,json,md,css,scss,html}": [
      "pnpm exec prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@10.18.2"
}
